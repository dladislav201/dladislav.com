{
  "name": "@dladislav.com/server",
  "version": "1.0.0",
  "main": "server.js",
  "description": "Backend service for a personal portfolio AI assistant.",
  "author": "Dobrodii Vladyslav <dobrodii.vlad200@gmail.com>",
  "license": "MIT",
  "private": false,
  "keywords": [
    "cv",
    "resume",
    "portfolio",
    "personal-website",
    "developer-cv",
    "frontend-developer",
    "fullstack",
    "web-developer",
    "software-engineer",
    "personal-site",
    "online-resume",
    "tech-profile",
    "interactive-cv",
    "homepage",
    "ai",
    "openai",
    "gpt-4",
    "gpt-4o",
    "node",
    "typescript"
  ],
  "scripts": {
    "build": "tsc && tsc-alias -p tsconfig.json",
    "start": "node dist/server.js",
    "dev": "ts-node-dev --respawn --transpile-only --quiet -r tsconfig-paths/register src/server.ts",
    "lint": "eslint --config eslint.config.mjs . --ext .ts",
    "lint:fix": "eslint --config eslint.config.mjs . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --testPathPattern __tests__/integration",
    "seed": "ts-node src/scripts/seed-knowledge.ts"
  },
  "dependencies": {
    "@pinecone-database/pinecone": "^5.1.1",
    "@types/express-rate-limit": "^5.1.3",
    "compression": "^1.8.0",
    "connect-timeout": "^1.9.0",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.0",
    "openai": "^4.95.1",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "xss": "^1.0.15",
    "zod": "^3.25.46"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@stylistic/eslint-plugin": "^4.2.0",
    "@types/compression": "^1.7.5",
    "@types/connect-timeout": "^0.0.39",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-serve-static-core": "^5.0.6",
    "@types/jest": "^29.5.14",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/winston": "^2.4.4",
    "eslint": "^9.25.1",
    "jest": "^29.7.0",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.16",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  }
